FROM openjdk:8-slim

MAINTAINER TFR <tfr011@gmail.com>


ENV NAME=mgb-smap
ENV JAR=$NAME-0.1-SNAPSHOT.jar

ADD target/$JAR $NAME/

WORKDIR $NAME

ENV ZHOST localhost
ENV ZPORT 2181
ENV SERVERPORT 8980
ENV LOCALREADS true
ENV TIMESTAMP undefined
ENV VERBOSE true

CMD java -jar $JAR zkh=${ZHOST} \
                   zkp=${ZPORT} \
                   sp=${SERVERPORT} \
                   lr=${LOCALREADS} \
                   ts=${TIMESTAMP} \
                   vb=${VERBOSE}
